<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_video_wrapper"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@android:color/black">

    <VideoView
        android:id="@+id/vv_custom_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_custom_video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <RelativeLayout
        android:id="@+id/rl_custom_video_controller_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_custom_video_full_screen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_expand" />

        <ImageView
            android:id="@+id/iv_custom_video_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/iv_custom_video_full_screen"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_share" />

        <ImageView
            android:id="@+id/iv_custom_video_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_play" />

        <ImageView
            android:id="@+id/iv_custom_video_stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_stop"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_custom_video_elapsed_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorExoProgress"
                android:text="@string/base_video_time"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/sb_custom_video_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:thumb="@drawable/seekbar_thumb" />

                <ImageView
                    android:id="@+id/iv_custom_video_sound"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/sound_on"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_custom_video_total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="@string/base_video_time"/>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_custom_video_progressBar"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/custom_video_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>